rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // User data (profile, progress, etc.)
      match /data/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Sessions: users can only read/write their own sessions
    match /sessions/{sessionId} {
      allow read: if request.auth.uid != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }

    // Page views: users can create their own, read only their own
    match /pageViews/{docId} {
      allow read: if request.auth.uid != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }

    // Events: users can create their own, read only their own
    match /events/{docId} {
      allow read: if request.auth.uid != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid != null && resource.data.userId == request.auth.uid;
    }

    // Daily stats: authenticated users can read, admin can write
    match /dailyStats/{date} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin(request.auth);
    }

    // Helper function to check if user is admin (uses custom claims)
    function isAdmin(auth) {
      return auth.token.admin == true || auth.token.email == 'armandocesa@gmail.com';
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
