rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // User data (profile, progress, etc.)
      match /data/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Analytics collection - more permissive for data tracking
    match /analytics/{document=**} {
      // Sessions: all authenticated users can read, only their own sessions
      match /sessions/{sessionId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null || request.auth == null; // Allow both authenticated and anonymous
        allow write: if request.auth.uid == resource.data.userId;
      }

      // Page views: authenticated users can create/read
      match /pageViews/{docId} {
        allow read, create: if request.auth.uid != null;
        allow write: if request.auth.uid == resource.data.userId;
      }

      // Events: authenticated users can create/read
      match /events/{docId} {
        allow read, create: if request.auth.uid != null;
        allow write: if request.auth.uid == resource.data.userId;
      }

      // Daily stats: authenticated users can read, admin can write
      match /dailyStats/{date} {
        allow read: if request.auth.uid != null;
        allow write: if request.auth.uid != null && isAdmin(request.auth.uid);
      }
    }

    // Helper function to check if user is admin
    function isAdmin(uid) {
      return uid in ['armandocesa@gmail.com']; // Will work with email check via custom claims in practice
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
